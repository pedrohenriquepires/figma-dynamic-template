{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "baseUrl": "src",
    "paths": {
      "~/@types/*": ["@types/*"],
      "~/app/*": ["app/*"],
      "~/plugin/*": ["plugin/*"]
    }
  }
}
